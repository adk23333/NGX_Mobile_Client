<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NGXMobileClient" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_80</item>
        <item name="colorPrimaryVariant">@color/primary_30</item>
        <item name="colorOnPrimary">@color/primary_20</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_80</item>
        <item name="colorSecondaryVariant">@color/secondary_100</item>
        <item name="colorOnSecondary">@color/secondary_20</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_dark</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/surface_dark</item>

    </style>
</resources>