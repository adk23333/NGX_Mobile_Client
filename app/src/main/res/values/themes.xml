<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NGXMobileClient" parent="Theme.NGXMobileClient.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_40</item>
        <item name="colorPrimaryVariant">@color/primary_90</item>
        <item name="colorOnPrimary">@color/primary_100</item>
        <item name="colorOnPrimaryContainer">@color/primary_10</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_40</item>
        <item name="colorSecondaryVariant">@color/secondary_100</item>
        <item name="colorOnSecondary">@color/secondary_90</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/surface</item>
    </style>

    <style name="Theme.NGXMobileClient.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NGXMobileClient.PopupOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="LoginEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

</resources>